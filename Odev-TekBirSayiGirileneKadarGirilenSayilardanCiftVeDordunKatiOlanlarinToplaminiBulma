import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner inp = new Scanner(System.in);
        int n1, sum = 0;

        do {
            System.out.print("Bir say覺 giriniz : ");
            n1 = inp.nextInt();
            if (n1%2 == 0 && n1%4 == 0) {
                sum += n1;
            }
        }
        while ((n1%2 == 0) );
        System.out.println("Girilen say覺lar覺n toplam覺 : " + sum);

    }
}
